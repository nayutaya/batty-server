
<div>
  <%= link_to(h("トップ"), root_path) %> &gt;
  <%= device_name_link(@device) %> &gt;
  <em>トリガの追加</em>
</div>

<h1>トリガの追加</h1>

<%- form_for(:edit_form, :url => {:action => "create"}) { |f| -%>
  <table border="1">
    <tr>
      <th>有効/無効</th>
      <td>
        <%= f.check_box(:enable) %>
        <%= f.label(:enable) %>
        <%= error_message_on(:edit_form, :enable) %>
      </td>
    </tr>
    <tr>
      <th><%= f.label(:operator) %></th>
      <td>
        <%= f.select(:operator, @operators_for_select) %>
        <%= error_message_on(:edit_form, :operator) %>
      </td>
    </tr>
    <tr>
      <th><%= f.label(:level) %></th>
      <td>
        <%= f.text_field(:level, :size => 4) %>
        <%= error_message_on(:edit_form, :level) %>
      </td>
    </tr>
  </table>
  <div><%= submit_tag("追加") %></div>
<%- } -%>

<%- unless production? -%>
  <div class="debug">
    <%= error_messages_for(:edit_form) %>
  </div>
<%- end -%>
