
<table class="list events">
  <thead>
    <tr>
      <th>日時</th>
      <th colspan="2">エネルギー</th>
      <th colspan="2">トリガ</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td colspan="5">
        <span><%= link_to(feed_icon + h(" RSS"), :controller => "device_feeds", :action => "events", :device_token => @device.device_token) %></span> |
        <span><%= link_to(h("すべて見る"), :action => "events") %> (<%=h @events.total_entries %>)</span>
      </td>
    </tr>
  </tfoot>
  <tbody>
    <%- @events.each_with_index { |event, index| -%>
      <tr class="<%= even_or_odd(index) %>">
        <td><%=h mmdd_hhmm(event.observed_at) %></td>
        <td><%= energy_meter(event.observed_level) %></td>
        <td align="right"><%=h event.observed_level %> %</td>
        <td align="center"><%=h event.trigger_operator_sign %></td>
        <td align="right"><%=h event.trigger_level %> %</td>
      </tr>
    <%- } -%>
  </tbody>
</table>
