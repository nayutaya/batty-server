
<table class="list events">
  <thead>
    <tr>
      <th>観測日時</th>
      <th colspan="2">デバイス</th>
      <th>エネ</th>
      <th colspan="2">トリガ</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td colspan="6">
        <span><%= link_to(feed_icon + h(" RSS"), :controller => "user_feeds", :action => "events_rss", :user_token => @login_user.user_token) %></span> |
        <span><%= link_to(csv_icon + h(" CSV"), :controller => "user_feeds", :action => "events_csv", :user_token => @login_user.user_token) %></span> |
        <span><%= link_to(h("すべて見る"), :controller => "events") %></span>
        <span>(<%=h @events.total_entries %>)</span>
      </td>
    </tr>
  </tfoot>
  <tbody>
    <%- @events.each_with_index { |event, index| -%>
      <tr class="<%=h even_or_odd(index) %>">
        <td><%=h mmdd_hhmm(event.observed_at) %></td>
        <td><%= device_icon24_link(event.device) %></td>
        <td><%= device_name_link(event.device) %></td>
        <td align="right"><%=h event.observed_level %> %</td>
        <td align="center"><%=h event.trigger_operator_sign %></td>
        <td align="right"><%=h event.trigger_level %> %</td>
      </tr>
    <%- } -%>
  </tbody>
</table>
