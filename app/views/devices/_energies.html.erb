
<table class="list energies">
  <thead>
    <tr>
      <th>観測日時</th>
      <th colspan="2">エネルギー</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td colspan="3">
        <span><%= link_to(feed_icon + h(" RSS"), :controller => "device_feeds", :action => "energies_rss", :device_token => @device.device_token) %></span> |
        <span><%= link_to(csv_icon + h(" CSV"), :controller => "device_feeds", :action => "energies_csv", :device_token => @device.device_token) %></span> |
        <span><%= link_to(h("すべて見る"), :action => "energies") %> (<%=h @energies.total_entries %>)</span>
      </td>
    </tr>
  </tfoot>
  <tbody>
    <%- @energies.each_with_index { |energy, index| -%>
      <tr class="<%= even_or_odd(index) %>">
        <td><%=h mmdd_hhmm(energy.observed_at) %></td>
        <td><%= energy_meter(energy.observed_level) %></td>
        <td align="right"><%=h energy.observed_level %> %</td>
      </tr>
    <%- } -%>
  </tbody>
</table>
